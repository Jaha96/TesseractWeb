@model TesseractWeb.Models.UserModel
@{
    ViewBag.Title = "Бүртгүүлэх";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr class="featurette-divider">
@using (Html.BeginForm())
{
    
    <div class="col-sm-8">
        <div class="row">
            <div class="panel panel-info col-lg-offset-6">
                <div class="panel-heading">Хэрэглэгч бүртгүүлэх</div>
                <div class="panel-body">

                    <div class="form-group">
                        @if (ViewBag.Message != null && ViewBag.Message != " ")
                {
                            <div class="alert alert-success">@ViewBag.Message</div>}
                        @if (ViewBag.ErrorMessage != null && ViewBag.ErrorMessage != " ")
                {
                            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>}
                    </div>

                    <div class="form-group">
                        <label for="CompanyName">Хэрэглэгчийн Нэр</label>
                        @Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "alert-danger" })
                        @{ Html.EnableClientValidation(false); }
                        @Html.HiddenFor(a => a.UserId)
                        @{ Html.EnableClientValidation(true); }
                        @*    @Html.ValidationMessageFor(a => a.UserId, "", new { @class = "alert-danger" })*@
                    </div>
                    <div class="form-group">
                        <label for="ContactPerson">Нууц үг</label>
                        @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Password,"",new { @class = "alert-danger" })
                    </div>
                    <div class="form-group">
                        <label for="Email">Нууц үг дахин</label>
                        @Html.PasswordFor(a => a.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.ConfirmPassword, "", new { @class = "alert-danger" })
                    </div>
                    <div class="form-group">
                        <label for="Phone">Мэйл хаяг</label>

                        @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
                        <label for="Phone" class="text-danger">* Мэйл хаягыг системд нэвтрэхэд ашиглана</label>
                        @Html.ValidationMessageFor(a => a.Email, "", new { @class = "alert-danger" })
                        
                    </div>

                    <div class="form-group">
                        <button class="btn btn-info" type="submit">Бүртгүүлэх</button>
                    </div>
                </div>
            </div>
                </div>
 </div>
            }

